{
  "name": "webpack5-pug-sass-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using Pug, Sass, PostCSS, Babel and Browsersync",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --mode development",
    "prod": "cross-env NODE_ENV=production webpack --mode production",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "sass-lint": "sass-lint -vq ./src/sass",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack sass",
    "webpack pug",
    "sass",
    "pug"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.14.5",
    "@babel/eslint-parser": "7.14.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "autoprefixer": "10.2.6",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.26.14",
    "browser-sync-webpack-plugin": "2.3.0",
    "copy-webpack-plugin": "9.0.0",
    "cross-env": "7.0.3",
    "css-loader": "5.2.6",
    "css-minimizer-webpack-plugin": "3.0.1",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "fibers": "5.0.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.3.1",
    "husky": "6.0.0",
    "mini-css-extract-plugin": "1.6.0",
    "node-sass": "6.0.0",
    "normalize.css": "8.0.1",
    "popper.js": "1.16.1",
    "postcss": "8.3.2",
    "postcss-loader": "6.1.0",
    "prettier": "2.3.1",
    "pug": "3.0.2",
    "pug-html-loader": "1.1.5",
    "raw-loader": "4.0.2",
    "sass": "1.34.1",
    "sass-lint": "1.13.1",
    "sass-loader": "12.1.0",
    "sass-rem": "3.0.0",
    "style-loader": "2.0.0",
    "terser-webpack-plugin": "5.1.3",
    "typescript": "4.3.2",
    "webpack": "5.38.1",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "3.11.2"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-pug-sass-starter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run sass-lint"
    }
  }
}
