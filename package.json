{
  "name": "webpack5-pug-sass-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using Pug, Sass, PostCSS, Babel and Browsersync",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack sass",
    "webpack pug",
    "sass",
    "pug"
  ],
  "author": "Noah Bravo",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "autoprefixer": "10.4.21",
    "babel-loader": "10.0.0",
    "cross-env": "10.1.0",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-promise": "7.2.1",
    "eslint-webpack-plugin": "5.0.2",
    "husky": "9.1.7",
    "normalize.css": "8.0.1",
    "postcss": "8.5.6",
    "postcss-loader": "8.2.0",
    "postcss-preset-env": "10.4.0",
    "prettier": "3.6.2",
    "pug": "3.0.3",
    "pug-plugin": "6.0.0",
    "sass": "1.93.2",
    "sass-loader": "16.0.5",
    "sass-rem": "4.0.0",
    "style-loader": "4.0.0",
    "typescript": "5.9.3",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noahbravo/webpack5-pug-sass-starter"
  },
  "browserslist": [
    "> 0.25%",
    "not dead"
